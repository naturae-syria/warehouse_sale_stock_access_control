        <field name="name">Stock Picking Manager</field>
        <field name="model_id" ref="stock.model_stock_picking"/>
        <field name="domain_force">['|',('picking_type_id.warehouse_id','in',env["res.users"].browse(user.id).allowed_warehouse_ids.ids),('picking_type_id.warehouse_id','=',False)]</field>
        <field name="groups" eval="[(4, ref('user_access_restrict.group_user_access_custom_manager'))]"/>
